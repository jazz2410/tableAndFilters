<mvc:View
    controllerName="standardapp.controller.standardApp"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <f:SimpleForm
            id="deliveryCreateForm"
            editable="true"
            layout="ResponsiveGridLayout"
        >
            <f:content>
                <Label
                    id="ValueLabel"
                    text="Customer"
                />
                <Input
                    id="ValueInput"
                    change="onPressChange"
                    width="200px"
                    showValueHelp="true"
                    valueHelpRequest="onValueHelpCustomer"
                    suggestionItems = "{/Customers}"
                    showSuggestion="true"
                >
                <suggestionItems>
                    <core:Item id="ValueHelp" key="{CustomerID}" text="{CustomerID}"></core:Item>
                </suggestionItems>

                </Input>
            </f:content>
        </f:SimpleForm>
    </Page>
</mvc:View>
